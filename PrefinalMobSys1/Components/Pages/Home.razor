@page "/"
@using System.Linq

@* Sample data for demonstration *@
@code {
    private string searchTerm = "";
    private List<Contact> contacts = new()
    {
        new Contact { Id = 1, Name = "Alice Smith", Phone = "555-1234", Email = "alice@example.com" },
        new Contact { Id = 2, Name = "Bob Johnson", Phone = "555-5678", Email = "bob@example.com" },
        new Contact { Id = 3, Name = "Charlie Brown", Phone = "555-8765", Email = "charlie@example.com" }
    };

    private IEnumerable<Contact> FilteredContacts =>
        string.IsNullOrWhiteSpace(searchTerm)
            ? contacts
            : contacts.Where(c => c.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) || c.Phone.Contains(searchTerm));

    private void AddContact() { /* Navigate to add contact page or show modal */ }
    private void ViewContact(int id) { /* Navigate to view contact */ }
    private void EditContact(int id) { /* Navigate to edit contact */ }
    private void DeleteContact(int id) { contacts = contacts.Where(c => c.Id != id).ToList(); }
}

@* Dashboard Header *@
<div class="dashboard-header">
    <h2><i class="fa fa-address-book"></i> Contacts Dashboard</h2>
    <div class="dashboard-actions">
        <input class="form-control" type="text" placeholder="Search contacts..." @bind="searchTerm" />
        <button class="btn btn-primary" @onclick="AddContact">
            <i class="fa fa-user-plus"></i> Add Contact
        </button>
    </div>
</div>

@* Summary Card *@
<div class="summary-cards">
    <div class="card summary-card">
        <div class="card-body">
            <h5 class="card-title"><i class="fa fa-users"></i> Total Contacts</h5>
            <p class="card-text">@contacts.Count</p>
        </div>
    </div>
</div>

@* Contacts List *@
<div class="contacts-list">
    @if (!FilteredContacts.Any())
    {
        <div class="alert alert-info">No contacts found.</div>
    }
    else
    {
        <ul class="list-group">
            @foreach (var contact in FilteredContacts)
            {
                <li class="list-group-item d-flex align-items-center justify-content-between">
                    <div class="contact-info d-flex align-items-center">
                        <div class="avatar">
                            <i class="fa fa-user-circle fa-2x"></i>
                        </div>
                        <div class="ms-3">
                            <div class="fw-bold">@contact.Name</div>
                            <div class="text-muted">@contact.Phone</div>
                        </div>
                    </div>
                    <div class="contact-actions">
                        <button class="btn btn-sm btn-info me-1" title="View" @onclick="() => ViewContact(contact.Id)">
                            <i class="fa fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-warning me-1" title="Edit" @onclick="() => EditContact(contact.Id)">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-danger" title="Delete" @onclick="() => DeleteContact(contact.Id)">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                </li>
            }
        </ul>
    }
</div>

@code {
    public class Contact
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Phone { get; set; } = "";
        public string Email { get; set; } = "";
    }
}

